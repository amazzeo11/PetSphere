<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Immagine del pet -->
        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/paw_icon"
            android:contentDescription="@string/foto_pet"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome -->
            <TextView android:text="@string/nome_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inserisci nome"/>

            <!-- Soprannome -->
            <TextView android:text="@string/soprannome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_soprannome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inserisci soprannome"/>

            <!-- Microchip -->
            <TextView android:text="@string/numero_di_microchip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_microchip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inserisci microchip"/>

            <!-- Età -->
            <TextView android:text="@string/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_eta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Inserisci età"/>

            <!-- Compleanno -->
            <TextView android:text="@string/compleanno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_compleanno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inserisci data di nascita"/>

            <!-- Tipo di Animale -->
            <TextView android:text="@string/tipo_di_animale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spinner_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tipi_animali"/>

            <!-- Colore -->
            <TextView android:text="@string/colore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spinner_colore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/colori_animali"/>

            <!-- Allergie -->
            <TextView android:text="Allergie:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_allergie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inserisci allergie"/>

            <!-- Note -->
            <TextView android:text="@string/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inserisci note"
                android:minLines="2"/>

            <!-- Bottone Salva -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_salva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salva"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
